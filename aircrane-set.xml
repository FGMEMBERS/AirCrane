<?xml version="1.0" encoding="UTF-8"?>
<!--
************************************************************************
Air-Crane simulation config.
************************************************************************
-->

<PropertyList>

  <sim include="Nasal/views.xml">

    <description>AirCrane (Yasim)</description>
    <author>BARANGER Emmanuel (3D), Heiko Schulz (FDM)</author>
    <status>alpha</status>
    <license>GPL v2</license>

    <flight-model>yasim</flight-model>
    <aero>aircrane</aero>
    <fuel-fraction>0.8</fuel-fraction>

    <startup>
      <splash-texture>Aircraft/AirCrane/aircrane-splash.png</splash-texture>
    </startup> 

    <sound>
      <path>Aircraft/AirCrane/Sounds/aircrane-sound.xml</path>
    </sound>

    <model>
      <path archive="y">Aircraft/AirCrane/Models/aircrane.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
      <aircrane>
        <state type="int">0</state>
        <engine type="float">0</engine>
        <rotor-step-deg type="float">-1</rotor-step-deg>
      </aircrane>
    </model>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int">0</int>  <!-- 0 immat -->
        <int type="int">0</int>  <!-- 1 immat -->
        <int type="int">0</int>  <!-- 2 immat -->
        <int type="int">0</int>  <!-- 3 immat -->
        <int type="int">0</int>  <!-- 4 immat -->
        <int type="int">0</int>  <!-- 5 immat -->
        <int type="bool">0</int> <!-- 6 smoke -->
        <int type="int">0</int>  <!-- 7 color -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
      </generic>
    </multiplay>

   <weight n="0">
      <name>Pilot</name>
      <weight-lb>180</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="1">
      <name>Co-Pilot</name>
      <weight-lb>180</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="2">
      <name>Right Passenger</name>
      <weight-lb>0</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="3">
      <name>Load</name>
      <weight-lb>0</weight-lb>
      <max-lb>20000</max-lb>
    </weight>
    
    <help>
      <title>AirCrane - background and help</title>
      <line></line>
      <key>
        <name>{</name>
        <desc>Start engines</desc>
      </key>
      <key>
        <name>}</name>
        <desc>Shutdown engines</desc>
      </key>
      <key>
        <name>R</name>
        <desc>Toggle rotor brake</desc>
      </key>
      <key>
        <name>r</name>
        <desc>Apply rotor brake</desc>
      </key>
      <key>
        <name>Ctrl d</name>
        <desc>Toggle S.A.S.</desc>
      </key>
      <key>
        <name>Ctrl e</name>
        <desc>Toggle C.A.S.</desc>
      </key>
      <key>
        <name>Ctrl f</name>
        <desc>Auto hover</desc>
      </key>
    </help>

    <menubar include="Dialogs/aircrane-menu.xml"/>

  </sim>

  <controls>
    <engines>
      <engine n="0">
        <magnetos>0</magnetos>
      </engine>
      <engine n="1">
        <magnetos>0</magnetos>
      </engine>
    </engines>
    <gear>
      <brake-parking>1</brake-parking>
    </gear>
    <rotor>
      <reltarget>1</reltarget>
      <maxreltorque>1</maxreltorque>
    </rotor>
  </controls>

  <instrumentation>
    <gsdi>
      <serviceable type="bool">true</serviceable>
      <enabled type="bool">true</enabled>
    </gsdi>
  </instrumentation>

  <input>
    <keyboard include="Nasal/aircrane-keyboard.xml"/>
  </input>

  <rotors>
    <main>
      <rpm type="double">0</rpm>
      <cone-deg type="double">0</cone-deg>
      <cone1-deg type="double">0</cone1-deg>
      <cone2-deg type="double">0</cone2-deg>
      <cone3-deg type="double">0</cone3-deg>
      <cone4-deg type="double">0</cone4-deg>
    </main>
  </rotors>

  <nasal>
    <doors>
      <file>Aircraft/AirCrane/Nasal/doors.nas</file>
    </doors>
    <aircrane>
      <file>Aircraft/AirCrane/Nasal/immat.nas</file>
      <file>Aircraft/AirCrane/Nasal/light.nas</file>
      <file>Aircraft/AirCrane/Nasal/aircrane.nas</file>
      <file>Aircraft/AirCrane/Nasal/liveries.nas</file>
      <file>Aircraft/AirCrane/Nasal/bladevisible.nas</file>
    </aircrane>
    <fcs>
      <file>Aircraft/AirCrane/Nasal/fcs-management.nas</file>
      <file>Aircraft/Generic/helicopter-fcs.nas</file>
    </fcs>
  </nasal>

</PropertyList>

