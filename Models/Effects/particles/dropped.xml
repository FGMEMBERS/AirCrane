<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <particlesystem>

    <name>dropped</name>
    <texture>smoke.png</texture>
    <emissive>false</emissive>
    <lighting>false</lighting>

    <attach>world</attach>

    <align>billboard</align> <!-- fixed -->

    <placer>
      <type>sector</type>
      <radius-min-m>  0.0 </radius-min-m>
      <radius-max-m> 15.0 </radius-max-m>
    </placer>

    <condition>
      <!-- <property>/sim/model/aircrane/particles/enabled</property> -->
      <not>
        <property>/sim/paused</property>
      </not>
      <not>
        <property>/sim/crashed</property>
      </not>
      <and>
        <not>
          <equals>
            <property>sim/model/door-positions/crew/position-norm</property>
            <value>0</value>
          </equals>
        </not>
        <not>
          <equals>
            <property>sim/model/door-positions/crew/position-norm</property>
            <value>1</value>
          </equals>
        </not>
      </and>
    </condition>

    <shooter>
      <theta-min-deg> -1.5 </theta-min-deg>
      <theta-max-deg>  1.5 </theta-max-deg>
      <phi-min-deg>   -1.5 </phi-min-deg>
      <phi-max-deg>    0.0 </phi-max-deg>
      <speed-mps>
        <value>  20.0 </value>
        <spread>  0.0 </spread>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec> 0 </x-min-deg-sec>
        <y-min-deg-sec> 0 </y-min-deg-sec>
        <z-min-deg-sec> 0 </z-min-deg-sec>
        <x-max-deg-sec> 0 </x-max-deg-sec>
        <y-max-deg-sec> 0 </y-max-deg-sec>
        <z-max-deg-sec> 0 </z-max-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <value>  20 </value>
        <spread>  5 </spread>
      </particles-per-sec>
    </counter>
      
    <particle>
      <start>
        <color>
          <red><value>   0.3 </value></red>
          <green><value> 0.3 </value></green>
          <blue><value>  0.3 </value></blue>
          <alpha><value> 0.1 </value></alpha>
        </color>
        <size>
          <value>  4 </value>
          <spread> 1 </spread>
        </size>
      </start>

      <end>
        <color>
          <red><value>   0.8 </value></red>
          <green><value> 0.8 </value></green>
          <blue><value>  0.8 </value></blue>
          <alpha><value> 0.5 </value></alpha>
        </color>
        <size>
          <value>  40 </value>
          <spread> 15 </spread>
        </size>
      </end>

      <life-sec>
        <value> 10 </value>
      </life-sec>

      <mass-kg> 6000 </mass-kg>
      <radius-m>  10 </radius-m>
    </particle>

    <program>
      <fluid>   water </fluid>
      <gravity> true  </gravity>
      <wind>    true  </wind>
    </program>

  </particlesystem>

</PropertyList>
