<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <key n="4">
    <name>Ctrl-d</name>
    <desc>Toggle SAS enable</desc>
    <binding>
      <command>nasal</command>
      <script>aircrane.sas.toggleEnable();</script>
    </binding>
  </key>

  
  <key n="6">
    <name>Ctrl-f</name>
    <desc>Toggle AutoHover</desc>
    <binding>
      <command>nasal</command>
      <script>aircrane.afcs.toggleAutoHover();</script>
    </binding>
    <binding>
      <command>nasal</command>
      <script>aircrane.cas.toggleEnable();</script>
    </binding>
  </key>

  <key n="68">
    <name>D</name>
    <desc>Passenger door</desc>
    <binding>
      <command>nasal</command>
      <script>aircrane.doorsystem.passengerexport();</script>
    </binding>
  </key>

  <key n="100">
    <name>d</name>
    <desc>Crew door</desc>
    <binding>
      <command>nasal</command>
      <script>aircrane.doorsystem.crewexport();</script>
    </binding>
  </key>

  <key n="82">
    <name>R</name>
    <desc>Toggle rotor brake</desc>
    <binding>
      <command>nasal</command>
      <script>
        var p = "/controls/rotor/brake";
        setprop(p, !getprop(p));
      </script>
    </binding>
  </key>

  <key n="114">
    <name>r</name>
    <desc>Apply rotor brake</desc>
    <binding>
      <command>nasal</command>
      <script>interpolate("/controls/rotor/brake", 1.0, 2)</script>
    </binding>
    <mod-up>
      <binding>
        <command>nasal</command>
        <script>interpolate("/controls/rotor/brake", 0.0, 2)</script>
      </binding>
    </mod-up>
  </key>

 <!-- added binding for cas-toggle as workaround for cas-bug in afcs.nas-->

  <key n="125">
    <name>}</name>
    <desc>Start Engines</desc>
    <binding>
      <command>nasal</command>
      <script>aircrane.engines(1)</script>
    </binding>
     <binding>
      <command>nasal</command>
      <script>aircrane.cas.toggleEnable();</script>
    </binding>
  </key>

  <key n="123">
    <name>{</name>
    <desc>Shutdown Engines</desc>
    <binding>
      <command>nasal</command>
      <script>aircrane.engines(0)</script>
    </binding>
    <binding>
      <command>nasal</command>
      <script>aircrane.cas.toggleEnable();</script>
    </binding>
  </key>

</PropertyList>

